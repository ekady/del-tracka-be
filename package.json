    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/pdfmake": "^0.2.9",
