    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "deploy": "npm install && npm run build && node dist/src/main",
    "lint": "eslint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "data:import": "ts-node --project tsconfig.json src/common/database/seeds/seed-data.ts --import",
    "data:delete": "ts-node src/common/database/seeds/seed-data.ts --delete",
    "prepare": "husky"
  },
